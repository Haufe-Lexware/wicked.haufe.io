extends layout

block content

  .jumbotron.wicked-error-title
    .container.wicked-title-container
      h1 Not Found  

      h2 Status Code: #{error.status}

      p= message
      
      a(class='btn btn-lg btn-warning' onclick='window.history.back();') Go back &raquo
  
  .container.wicked-container

    img(src='/images/wicked-256.png').center-block

    br
    br

    h4.
      This page could not be found.

    if !authUser
      p.
        You are currently not logged in; please log in and retry accessing this page again. In some cases, it may help.

      a(href='/login').btn.btn-lg.btn-primary Log in &raquo;
    else
      p.
        If you have a feeling that the URL you requested should actually be here, please contact the <a href='/content/contact'>API Portal Administrator</a> and describe what is wrong.

    br
    br
    br

    p.
      Correlation ID: <code>#{correlationId}</code>

    if error.stack
      pre #{error.stack}
