extends layout
block bodyScripts
    script(type='text/javascript').
        function sanitizeHTML(text) {
            return $('<div>').text(text).html();
        }
        $(document).ready(function(){
           window.onpopstate = function (event) {
              initializeGridFromStateServerSide(grid).then(() => { grid.isGridRefreshAvailable = true }).catch(err => console.log('Error', err));
           }
           $('#usersGrid').jsGrid({
           width: "100%", pageSize: 10, sorting: true, paging: true, filtering: true, pageLoading:true, autoload: true,
           controller: {
            loadData: function (filter) {
              var d = $.Deferred();
          		$.ajax({
                  url: "/admin/users",
                  data: filter,
                  dataType: "json"
                }).done(function(result) {
                  d.resolve({
                      data: result.users.items,
                      itemsCount: result.users.count
                  });
                });
                return d.promise();
             }
            },
            fields: [
                 { name: "userId", type: "text", title: "User ID" , width: "12%"},
                 { name: "name", type: "text", title: "Name",
                   itemTemplate: function(value, item) {
                     return $("<a>").attr("href", "/users/" + item.userId).text(sanitizeHTML(value));
                    }
                 },
                 { name: "email", type: "text", title: "Email",
                   itemTemplate: function(value, item) {
                    return sanitizeHTML(value);
                   }
                 },
                 { name: "customId", type: "text", title: "Custom ID", filtering: false,
                   itemTemplate: function(value, item) {
                     return (value) ? value : "---";
                    }
                 },
                 { type: "control", width: "10", editButton: false, deleteButton: false,
                   _createFilterSwitchButton: function() {
                    return this._createOnOffSwitchButton("filtering", this.searchModeButtonClass, false);
                   }
                 }
             ]
           });
           var grid = $("#usersGrid").data("JSGrid");
           grid.isGridRefreshAvailable = true;
        });

block content
