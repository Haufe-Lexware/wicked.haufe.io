{
    "id": "sample-auth",
    "name": "sample-auth",
    "desc": "Sample Authorization Server",
    "authMethods": [
        {
            "name": "local",
            "type": "local",
            "friendlyShort": "Username and Password",
            "friendlyLong": "Log in using a local username and password.",
            "config": {
                "authorizeEndpoint": "/{{name}}/api/{{api}}/authorize",
                "tokenEndpoint": "/{{name}}/api/{{api}}/token"
            }
        },
        {
            "name": "azure",
            "type": "oauth2",
            "friendlyShort": "Azure AD",
            "friendlyLong": "Log in using Azure AD",
            "config": {
                "authorizeEndpoint": "/{{name}}/api/{{api}}/authorize",
                "tokenEndpoint": "/{{name}}/api/{{api}}/token",
                "profileEndpoint": "/profile",
                "clientId": "abcdef-ghijkl-mnoopq",
                "clientSecret": "123456-78912-37988"
            }
        }
    ],
    "config": {
        "api": {
            "name": "sample-auth",
            "upstream_url": "http://localhost:1234",
            "preserve_host": false,
            "uris": [
                "/sample-auth"
            ],
            "strip_uri": false
        },
        "plugins": [
            {
                "name": "correlation-id",
                "config": {
                    "header_name": "Correlation-Id",
                    "generator": "uuid",
                    "echo_downstream": false
                }
            }
        ]
    }
}
